<body>
<script>
var nScore=0, n ScoreTotal=0, nCount=0;
while(nCount <5)
{
    nScore=parseInt(window.prompt("Enter nScore",""));
    nScoreTotal = nScoreTotal + nScore;
    nCount = nCount + 1;
    document.write("Score " + nCount + " = " + nScore + "<br>");
}
document.write("<h2>The Average Scre = " + nScoreTotal/5 + "</h2>");
</script>
<p>Click Reload to run script again</p>
</body>
